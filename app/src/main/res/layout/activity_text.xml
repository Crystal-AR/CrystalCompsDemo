<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/background_c"
                android:weightSum="100"
                tools:context="com.crystal_ar.crystalcompsdemo.TextActivity">

    <ImageView
        android:id="@+id/textImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <CheckBox
        android:id="@+id/replaceImageCheckBox"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textColor="#FFFFFF"
        android:buttonTint="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Replace w/ Img"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:id="@+id/urlCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textColor="#FFFFFF"
        android:buttonTint="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="URLs"
        android:onClick="onCheckboxClicked"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <CheckBox
        android:id="@+id/phoneNumberCheckBox"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textColor="#FFFFFF"
        android:buttonTint="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Phone Numbers"
        android:onClick="onCheckboxClicked"/>


        <CheckBox
        android:id="@+id/emailCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textColor="#FFFFFF"
        android:buttonTint="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Emails"
        android:onClick="onCheckboxClicked"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/BtnTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#8000"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:text="Take Photo"/>
        <Button
            android:id="@+id/BtnLoadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#8000"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:text="Load Photo"/>
    </LinearLayout>


</LinearLayout>
